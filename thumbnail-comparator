  <script>
    const fileA = document.getElementById('fileA');
    const fileB = document.getElementById('fileB');
    const compareSection = document.getElementById('compareSection');
    
    // Elements for Images
    const imgA_sbs = document.getElementById('imgA_sbs');
    const imgB_sbs = document.getElementById('imgB_sbs');
    const imgA_slide = document.getElementById('imgA_slide');
    const imgB_slide = document.getElementById('imgB_slide');

    // Slider Logic
    const sliderWrapper = document.getElementById('sliderWrapper');
    const overlayA = document.getElementById('overlayA');
    const slideHandle = document.getElementById('slideHandle');
    const slideLine = document.getElementById('slideLine');

    let isLoadedA = false;
    let isLoadedB = false;

    // Load Image A
    fileA.addEventListener('change', function(e) {
        if(e.target.files && e.target.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imgA_sbs.src = e.target.result;
                imgA_slide.src = e.target.result;
                document.getElementById('labelA').innerText = "Loaded!";
                document.getElementById('labelA').style.color = "#00e676";
                isLoadedA = true;
                checkReady();
            }
            reader.readAsDataURL(e.target.files[0]);
        }
    });

    // Load Image B
    fileB.addEventListener('change', function(e) {
        if(e.target.files && e.target.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imgB_sbs.src = e.target.result;
                imgB_slide.src = e.target.result;
                document.getElementById('labelB').innerText = "Loaded!";
                document.getElementById('labelB').style.color = "#00e676";
                isLoadedB = true;
                checkReady();
            }
            reader.readAsDataURL(e.target.files[0]);
        }
    });

    function checkReady() {
        if(isLoadedA && isLoadedB) {
            compareSection.style.display = 'block';
            compareSection.scrollIntoView({behavior:"smooth", block:"start"});
            initSlider();
        }
    }

    // View Switching
    window.setMode = function(mode) {
        const btns = document.querySelectorAll('.mode-btn');
        btns.forEach(b => b.classList.remove('active'));
        event.target.classList.add('active');

        if(mode === 'sbs') {
            document.getElementById('containerSBS').style.display = 'block';
            document.getElementById('containerSlider').style.display = 'none';
        } else {
            document.getElementById('containerSBS').style.display = 'none';
            document.getElementById('containerSlider').style.display = 'block';
        }
    }

    // Draggable Slider Logic
    function initSlider() {
        let isDown = false;
        
        sliderWrapper.addEventListener('mousedown', () => isDown = true);
        window.addEventListener('mouseup', () => isDown = false);
        
        sliderWrapper.addEventListener('mousemove', (e) => {
            if(!isDown) return;
            moveSlide(e);
        });

        // Touch support
        sliderWrapper.addEventListener('touchstart', () => isDown = true);
        window.addEventListener('touchend', () => isDown = false);
        sliderWrapper.addEventListener('touchmove', (e) => {
            if(!isDown) return;
            moveSlide(e.touches[0]);
        });

        function moveSlide(e) {
            const rect = sliderWrapper.getBoundingClientRect();
            let x = e.clientX - rect.left;
            
            // Constraints
            if (x < 0) x = 0;
            if (x > rect.width) x = rect.width;
            
            // Percentage
            const percent = (x / rect.width) * 100;
            
            // Apply
            overlayA.style.width = percent + "%";
            slideHandle.style.left = percent + "%";
            slideLine.style.left = percent + "%";
        }
    }
  </script>
